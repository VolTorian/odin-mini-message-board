<html>
    <head>
        <title>Message Board</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <h2><%= title %></h2>
        <ol>
            <% messages.forEach((message) => { %>
                <li>
                    <h4><%= message.user %> - <%= message.added %></h4>
                    <div><%= message.text %></div>
                </li>
            <% }); %>
        </ol>
        <a href="/new" class="button">Add new message</a>
    </body>
</html>